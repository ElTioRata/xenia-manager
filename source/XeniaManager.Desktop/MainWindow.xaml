<Window x:Class="XeniaManager.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Xenia Manager"
        MinWidth="885" MinHeight="720" Width="885" Height="720"
        WindowStyle="None" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Title Bar-->
        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              Height="44">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--Icon/Title-->
            <StackPanel Grid.Column="0"
                        Margin="10,0,0,0"
                        Orientation="Horizontal">
                <TextBlock Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Text="Xenia Manager" />
            </StackPanel>

            <!--Title Bar Buttons-->
            <Button x:Name="BtnMinimize"
                    Grid.Column="1"
                    Style="{StaticResource TitleBarDefaultButtonStyle}">
                <TextBlock VerticalAlignment="Center"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="12"
                           Text="&#xE921;" />
            </Button>

            <Button x:Name="BtnMaximize"
                    Grid.Column="2"
                    Style="{StaticResource TitleBarDefaultButtonStyle}">
                <TextBlock x:Name="MaximizeIcon"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="12"
                           Text="&#xE922;" />
            </Button>

            <Button x:Name="BtnClose"
                    Grid.Column="3"
                    Style="{StaticResource TitleBarDefaultCloseButtonStyle}">
                <TextBlock VerticalAlignment="Center"
                           FontFamily="{StaticResource SymbolThemeFontFamily}"
                           FontSize="18"
                           Text="&#xE711;" />
            </Button>
        </Grid>

        <!--Dockpanel/Navigation Frame-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Options-->
            <DockPanel Grid.Column="0"
                       VerticalAlignment="Top">
                <Button x:Name="BtnOpenXenia"
                        Margin="10,2,4,10"
                        AutomationProperties.Name="Open Xenia"
                        DockPanel.Dock="Top"
                        Width="75">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="28">
                            &#xE768;
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0"
                                   Text="Open&#x0a;Xenia"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtnLibrary"
                        Margin="10,0,4,10"
                        AutomationProperties.Name="Library"
                        DockPanel.Dock="Top"
                        Width="75">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="24">
                            &#xE8F1;
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0" Text="Library" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtnXeniaSettings"
                        Margin="10,0,4,10"
                        AutomationProperties.Name="Xenia Settings"
                        DockPanel.Dock="Top"
                        Width="75">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="24">
                            &#xE713;
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0"
                                   Text="Xenia&#x0a;Settings"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtnSettings"
                        Margin="10,0,4,10"
                        AutomationProperties.Name="Settings"
                        DockPanel.Dock="Top"
                        Width="75">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="24">
                            &#xEF58;
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0"
                                   Text="Settings"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button x:Name="BtnUpdate"
                        Margin="10,0,4,10"
                        AutomationProperties.Name="Update"
                        DockPanel.Dock="Top"
                        Width="75">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   FontSize="24">
                            &#xE777;
                        </TextBlock>
                        <TextBlock Margin="0,5,0,0"
                                   Text="Update"
                                   TextAlignment="Center" />
                    </StackPanel>
                </Button>
            </DockPanel>

            <!--Navigation Frame-->
            <Border Grid.Column="1"
                    Margin="4,0,0,0"
                    Padding="24,16,24,0"
                    Background="{DynamicResource LayerFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8,0,0,0">
                <Frame x:Name="FrmNavigation" />
            </Border>
        </Grid>
    </Grid>
</Window>