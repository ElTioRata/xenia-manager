<Page x:Class="XeniaManager.Desktop.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:XeniaManager.Desktop.Converters"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutPage">
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <!-- Animation Storyboards -->
        <Storyboard x:Key="SlideInFromTop">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-100" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SlideOutToTop">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-100">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseIn" Amplitude="0.2" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Style for animated card -->
        <Style x:Key="AnimatedDownloadCard"
               TargetType="ui:Card"
               BasedOn="{StaticResource {x:Type ui:Card}}">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0" />
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SlideInFromTop}" />
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard Storyboard="{StaticResource SlideOutToTop}" />
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <ui:DynamicScrollViewer Padding="20">
        <StackPanel>
            <ui:InfoBar x:Name="IbUpdatesAvailable" />
            <ui:Card x:Name="CardDownloadProgress"
                     Padding="10"
                     Margin="0,0,0,10"
                     MaxWidth="820"
                     Style="{StaticResource AnimatedDownloadCard}">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Download Progress"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Left" />
                        <TextBlock x:Name="TxtDownloadProgress"
                                   Text="{Binding ElementName=PbDownloadProgress, Path=Value, StringFormat={}{0:F0}%}"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right" />
                    </Grid>
                    <ProgressBar x:Name="PbDownloadProgress"
                                 Height="8"
                                 Maximum="100" />
                </StackPanel>
            </ui:Card>
            <!-- Application Info Section -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <!-- App Title and Version -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="Xenia Manager"
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="{Binding ApplicationVersion}"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- App Description -->
                    <TextBlock Text="{DynamicResource AboutPage_AppDescription}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               FontSize="14"
                               MaxWidth="600"
                               Margin="0,0,0,20" />

                    <!-- Action Buttons -->
                    <UniformGrid Rows="1"
                                 Columns="3"
                                 Margin="0,12,0,0"
                                 HorizontalAlignment="Center">
                        <ui:Button x:Name="BtnWebsite"
                                   Appearance="Secondary"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   Content="{DynamicResource AboutPage_WebsiteButtonText}"
                                   Click="BtnWebsite_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Globe24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button x:Name="BtnGitHub"
                                   Appearance="Secondary"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   Content="{DynamicResource AboutPage_GithubButtonText}"
                                   Click="BtnGitHub_Click">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Open24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <StackPanel>
                            <CheckBox Content="{DynamicResource AboutPage_UseExperimentalBuild}"
                                      ToolTip="{DynamicResource AboutPage_UseExperimentalBuildTooltip}"
                                      IsChecked="{Binding UseExperimentalBuilds}"/>
                            <ui:Button x:Name="BtnCheckUpdates"
                                       Appearance="Info"
                                       Style="{DynamicResource ManageXeniaButton}"
                                       Visibility="{Binding CheckForUpdatesButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Content="{DynamicResource AboutPage_CheckForUpdatesButtonText}"
                                       Click="BtnCheckUpdates_Click">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="ArrowSync24" />
                                </ui:Button.Icon>
                            </ui:Button>
                            <ui:Button x:Name="BtnUpdateXeniaManager"
                                       Appearance="Info"
                                       Style="{DynamicResource ManageXeniaButton}"
                                       Visibility="{Binding UpdateManagerButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                                       Content="{DynamicResource AboutPage_UpdateXeniaManagerButtonText}"
                                       Click="BtnUpdateXeniaManager_Click">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="ArrowDown24" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </ui:Card>

            <!-- License & Credits -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Symbol="Document24"
                                       FontSize="24"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource AboutPage_LicenseCreditsText}"
                                       FontSize="18"
                                       FontWeight="SemiBold" />
                            <TextBlock Text="{DynamicResource AboutPage_LicenseCreditsSideText}"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       FontSize="12" />
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,8,0,0">
                        <TextBlock Text="{DynamicResource AboutPage_LicenseText}"
                                   FontSize="14"
                                   Margin="0,4,0,8" />

                        <TextBlock Text="Third-party libraries and acknowledgments:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,8,0,4" />

                        <TextBlock FontSize="14" Margin="0,4,0,0">
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://xenia.jp/" RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Project" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/xenia-canary/xenia-canary"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Canary" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/AdrianCassar/xenia-canary"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Netplay" />
                            </Hyperlink>
                            <Run Text=", " />
                            <Hyperlink NavigateUri="https://github.com/marinesciencedude/xenia-canary-mousehook"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Xenia Mousehook" />
                            </Hyperlink>
                            <Run Text=" (Xbox 360 Emulator)" />
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/Team-Resurgent/Xbox360Toolkit"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Team Resurgent" />
                            </Hyperlink>
                            <Run Text=" (Xbox 360 Toolkit)" />
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/lepoco/wpfui"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="WPF UI" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/falahati/NvAPIWrapper"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="NvAPIWrapper" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/dlemstra/Magick.NET"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Magick.NET" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://serilog.net/"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Serilog" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• " />
                            <Hyperlink NavigateUri="https://github.com/xoofx/Tomlyn"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                <Run Text="Tomlyn" />
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="• Community contributors and testers" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>