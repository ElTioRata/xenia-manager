<Page x:Class="XeniaManager.Desktop.Views.Pages.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LibraryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Searchbar, sort, show game name, add game-->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--Searchbar for game library-->
            <!--TODO: Searchbar search function, placeholder text-->
            <ui:TextBox x:Name="TxtSearchBar"
                        Grid.Column="0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="24"
                        Padding="10,0,0,0"
                        TextWrapping="WrapWithOverflow"
                        VerticalContentAlignment="Center" />

            <!--Button for adding games-->
            <ui:Button x:Name="BtnAddGame"
                       Grid.Column="2"
                       Background="{x:Null}"
                       BorderBrush="{x:Null}"
                       Cursor="Hand"
                       FontSize="32"
                       Margin="10,0"
                       VerticalAlignment="Center"
                       Click="BtnAddGame_Click">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Add24" />
                </ui:Button.Icon>
            </ui:Button>
        </Grid>

        <!--Separation line-->
        <Border Grid.Row="1"
                Background="{DynamicResource TextFillColorSecondaryBrush}"
                Height="1" />

        <!--Games-->
        <ScrollViewer Grid.Row="2"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="WpGameLibrary"
                       Orientation="Horizontal" />
        </ScrollViewer>
    </Grid>
</Page>