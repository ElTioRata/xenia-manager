<Page x:Class="XeniaManager.Desktop.Views.Pages.XeniaSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="810"
      Title="XeniaSettingsPage">
    <Page.Resources>
        <Style x:Key="FlatMenuItemStyle" TargetType="MenuItem">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <ContentPresenter ContentSource="Header" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      MinWidth="500"
                      Margin="5,0" />
            <Menu Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,5,0">
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnResetSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="ArrowClockwise24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOptimizeSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="CloudSync24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOpenInEditor"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Pen24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnSaveSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Save24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>
        
        <Border Grid.Row="1"
                Background="{DynamicResource TextFillColorSecondaryBrush}"
                Height="1" />

        <Menu Grid.Row="2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Margin="5">
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="SpeakerEdit24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Desktop24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplaySettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DrawImage24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GraphicalSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Globe24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GeneralSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Cursor24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_UserInputSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Storage24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_StorageSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="28"/>
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_HackSettingsTitleText}" 
                                       FontSize="18" 
                                       Margin="0,4,0,0" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

