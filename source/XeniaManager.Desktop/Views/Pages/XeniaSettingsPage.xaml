<Page x:Class="XeniaManager.Desktop.Views.Pages.XeniaSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="810"
      Title="XeniaSettingsPage">
    <Page.Resources>
        <Style x:Key="FlatMenuItemStyle" TargetType="MenuItem">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <ContentPresenter ContentSource="Header" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      MinWidth="500"
                      Margin="5,0" />
            <Menu Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  Margin="0,0,5,0">
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnResetSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="ArrowClockwise24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOptimizeSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="CloudSync24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnOpenInEditor"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Pen24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
                <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                    <MenuItem.Header>
                        <Button x:Name="BtnSaveSettings"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Cursor="Hand"
                                FontSize="24"
                                VerticalAlignment="Center">
                            <ui:SymbolIcon Symbol="Save24" />
                        </Button>
                    </MenuItem.Header>
                </MenuItem>
            </Menu>
        </Grid>

        <Border Grid.Row="1"
                Background="{DynamicResource TextFillColorSecondaryBrush}"
                Height="1" />

        <Menu Grid.Row="2"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              Margin="5">
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnAudioSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="SpeakerEdit24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_AudioSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnDisplaySettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Desktop24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_DisplaySettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnGraphicalSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DrawImage24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GraphicalSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnGeneralSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Globe24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_GeneralSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnUserInputSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Cursor24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_UserInputSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnStorageSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Storage24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_StorageSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Style="{StaticResource FlatMenuItemStyle}">
                <MenuItem.Header>
                    <Button x:Name="BtnHackSettings"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            FontSize="36"
                            VerticalAlignment="Center"
                            Click="BtnShowSettings_Click">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="Settings24" FontSize="28" />
                            <TextBlock Text="{DynamicResource XeniaSettingsPage_HackSettingsTitleText}"
                                       FontSize="18"
                                       Margin="0,4,0,0"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </MenuItem.Header>
            </MenuItem>
        </Menu>

        <StackPanel x:Name="SpSettingsPanel"
                    Grid.Row="3"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">
            <StackPanel x:Name="SpAudioSettings">
                <!-- apu -->
                <Border x:Name="BrdAudioSystemSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingText}">
                            <TextBlock.ToolTip>
                                <TextBlock FontWeight="Normal"
                                           Text="{DynamicResource XeniaSettingsPage_AudioSystemSettingTooltip}"
                                           TextWrapping="Wrap"
                                           xml:space="preserve" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <ComboBox Grid.Column="1"
                                  x:Name="CmbAudioSystem"
                                  Cursor="Hand"
                                  FontSize="18"
                                  Margin="0,10"
                                  HorizontalAlignment="Center"
                                  MinWidth="150">
                            <ComboBox.Items>
                                <ComboBoxItem Content="any" />
                                <ComboBoxItem Content="nop" />
                                <ComboBoxItem Content="sdl" />
                                <ComboBoxItem Content="xaudio2" />
                            </ComboBox.Items>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- apu_max_queued_frames -->
                <Border x:Name="BrdAudioMaxQueuedFramesSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioMaxQueuedFramesSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <TextBox x:Name="TxtAudioMaxQueuedFrames"
                                 Grid.Column="1"
                                 FontSize="18"
                                 HorizontalContentAlignment="Center"
                                 Margin="0,10"
                                 VerticalContentAlignment="Center"
                                 Width="130" />
                    </Grid>
                </Border>

                <!-- mute -->
                <Border x:Name="BrdAudioMuteSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioMuteSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkAudioMute"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- enable_xmp -->
                <Border x:Name="BrdEnableXmpSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioXmpSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmp"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- xmp_default_volume -->
                <Border x:Name="BrdXmpVolumeSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioXmpVolumeSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <Grid Grid.Column="1"
                              Margin="0"
                              VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Slider x:Name="SldXmpVolume"
                                    Grid.Row="0"
                                    Minimum="0" Maximum="100"
                                    IsSnapToTickEnabled="True" TickFrequency="1"
                                    Width="240" />
                            <TextBlock x:Name="TxtSldXmpVolume"
                                       Grid.Row="1"
                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- use_dedicated_xma_thread -->
                <Border x:Name="BrdAudioDedicatedXmaThreadSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioUseDedicatedXmaThreadSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkDedicatedXmaThread"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>

                <!-- use_new_decoder -->
                <Border x:Name="BrdAudioXmaDecoderSetting"
                        BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
                        BorderThickness="2"
                        CornerRadius="10"
                        Margin="2"
                        MaxWidth="810">
                    <Grid Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingText}">
                            <TextBlock.ToolTip>
                                <ToolTip MaxWidth="400">
                                    <TextBlock FontWeight="Normal"
                                               Text="{DynamicResource XeniaSettingsPage_AudioXmaDecoderSettingTooltip}"
                                               TextWrapping="Wrap"
                                               xml:space="preserve" />
                                </ToolTip>
                            </TextBlock.ToolTip>
                        </TextBlock>
                        <CheckBox x:Name="ChkXmaAudioDecoder"
                                  Grid.Column="1"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"
                                  Width="45" />
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel x:Name="SpDisplaySettings">
                <ui:TextBlock x:Name="TxtDisplaySettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="Display" />
            </StackPanel>

            <StackPanel x:Name="SpGraphicalSettings">
                <ui:TextBlock x:Name="TxtGraphicalSettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="Graphics" />
            </StackPanel>

            <StackPanel x:Name="SpGeneralSettings">
                <ui:TextBlock x:Name="TxtGeneralSettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="General" />
            </StackPanel>

            <StackPanel x:Name="SpUserInputSettings">
                <ui:TextBlock x:Name="TxtUserInputSettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="User Input" />
            </StackPanel>

            <StackPanel x:Name="SpStorageSettings">
                <ui:TextBlock x:Name="TxtStorageSettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="Storage" />
            </StackPanel>

            <StackPanel x:Name="SpHackSettings">
                <ui:TextBlock x:Name="TxtHackSettingsGroupTitle"
                              FontSize="40"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,10"
                              Text="Hacks" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>