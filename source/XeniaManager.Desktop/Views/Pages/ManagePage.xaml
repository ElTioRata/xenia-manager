<Page x:Class="XeniaManager.Desktop.Views.Pages.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XeniaManager.Desktop.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManagePage">
    <ui:DynamicScrollViewer>
        <StackPanel>
            <Border x:Name="BrdXeniaCanary" 
                    BorderThickness="2"
                    BorderBrush="{DynamicResource AccentTextFillColorPrimaryBrush}"
                    CornerRadius="10"
                    Margin="2"
                    MinHeight="50">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="TblkXeniaCanary" 
                               Grid.Row="0"
                               Grid.ColumnSpan="3"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               FontWeight="SemiBold"
                               Text="Xenia Canary: Not Installed">
                    </TextBlock>

                    <ui:Button x:Name="BtnInstallCanary"
                               Grid.Column="0"
                               Grid.Row="1" 
                               Content="{DynamicResource ManagePage_Install}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" />

                    <ui:Button x:Name="BtnUninstallCanary" 
                               Grid.Column="1"
                               Grid.Row="1" 
                               Content="{DynamicResource ManagePage_Uninstall}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               IsEnabled="False" />

                    <ui:Button x:Name="BtnUpdateCanary" 
                               Grid.Column="2"
                               Grid.Row="1" 
                               Content="{DynamicResource ManagePage_Update}"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               IsEnabled="False" />
                </Grid>
            </Border>
        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>
