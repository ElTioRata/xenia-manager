<Page x:Class="XeniaManager.Desktop.Views.Pages.ManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:XeniaManager.Desktop.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="ManagePage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">
    <Page.Resources>
        <!--  Animation Storyboards  -->
        <Storyboard x:Key="SlideInFromTop">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="-100" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase Amplitude="0.3" EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Key="SlideOutToTop">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-100">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase Amplitude="0.2" EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Visibility">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <!--  Style for animated card  -->
        <Style x:Key="AnimatedDownloadCard"
               BasedOn="{StaticResource {x:Type ui:Card}}"
               TargetType="ui:Card">
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0" />
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SlideInFromTop}" />
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard Storyboard="{StaticResource SlideOutToTop}" />
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <ui:DynamicScrollViewer Padding="20">
        <StackPanel>
            <!--  Download Progress Card  -->
            <ui:Card x:Name="CardDownloadProgress"
                     MaxWidth="820"
                     Padding="16"
                     Style="{StaticResource AnimatedDownloadCard}">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Margin="0,0,8,0"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           Symbol="ArrowDownload24" />
                            <TextBlock VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Text="Download Progress" />
                        </StackPanel>
                        <TextBlock x:Name="TxtDownloadProgress"
                                   HorizontalAlignment="Right"
                                   FontWeight="SemiBold"
                                   Text="{Binding ElementName=PbDownloadProgress, Path=Value, StringFormat={}{0:F0}%}" />
                    </Grid>
                    <ProgressBar x:Name="PbDownloadProgress"
                                 Height="8"
                                 Maximum="100" />
                </StackPanel>
            </ui:Card>

            <!--  Emulator Management Card  -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <!--  Card Header  -->
                    <Grid Margin="0,-10,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Symbol="Apps24" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="20"
                                       FontWeight="SemiBold"
                                       Text="Emulator Management" />
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="Install and manage Xenia emulator versions" />
                        </StackPanel>
                    </Grid>

                    <!--  Xenia Canary Section  -->
                    <Border Margin="0,0,0,16"
                            Padding="16"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                    <TextBlock VerticalAlignment="Center"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Text="Xenia Canary" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="{Binding CanaryVersionText}" />
                                </StackPanel>
                            </Grid>

                            <!--  Primary Actions  -->
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <ui:Button x:Name="BtnInstallCanary"
                                           Appearance="Success"
                                           Click="BtnInstallCanary_Click"
                                           Content="{DynamicResource ManagePage_Install}"
                                           IsEnabled="{Binding CanaryInstall}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowDownload24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button x:Name="BtnUpdateCanary"
                                           Appearance="Info"
                                           Click="BtnUpdateCanary_Click"
                                           Content="{DynamicResource ManagePage_Update}"
                                           IsEnabled="{Binding CanaryUpdate}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowSync24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button x:Name="BtnUninstallCanary"
                                           Appearance="Danger"
                                           Click="BtnUninstallCanary_Click"
                                           Content="{DynamicResource ManagePage_Uninstall}"
                                           IsEnabled="{Binding CanaryUninstall}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="Delete24" />
                                    </ui:Button.Icon>
                                </ui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!--  Xenia Mousehook Section  -->
                    <Border Padding="16"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                    <TextBlock VerticalAlignment="Center"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Text="Xenia Mousehook" />
                                    <TextBlock HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="{Binding MousehookVersionText}" />
                                </StackPanel>
                            </Grid>

                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <ui:Button x:Name="BtnInstallMousehook"
                                           Appearance="Success"
                                           Click="BtnInstallMousehook_Click"
                                           Content="{DynamicResource ManagePage_Install}"
                                           IsEnabled="{Binding MousehookInstall}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowDownload24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button x:Name="BtnUpdateMousehook"
                                           Appearance="Info"
                                           Click="BtnUpdateMousehook_Click"
                                           Content="{DynamicResource ManagePage_Update}"
                                           IsEnabled="{Binding MousehookUpdate}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowSync24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button x:Name="BtnUninstallMousehoook"
                                           Appearance="Danger"
                                           Click="BtnUninstallMousehoook_Click"
                                           Content="{DynamicResource ManagePage_Uninstall}"
                                           IsEnabled="{Binding MousehookUninstall}"
                                           Style="{DynamicResource ManageXeniaButton}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="Delete24" />
                                    </ui:Button.Icon>
                                </ui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <!--  Settings Section  -->
                    <Separator Margin="0,8" />
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Symbol="Settings24" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="16"
                                       FontWeight="SemiBold"
                                       Text="Configuration" />
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="Customize emulator behavior and file organization" />
                        </StackPanel>
                    </Grid>

                    <!--  Settings Options  -->
                    <Border Padding="16"
                            Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                            CornerRadius="8">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontWeight="Medium" Text="{DynamicResource ManagePage_UnifiedContentFolder}" />
                                    <TextBlock Margin="0,2,0,0"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                               Text="{DynamicResource ManagePage_UnifiedContentFolderTooltip}"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                                <CheckBox Grid.Column="1"
                                          VerticalAlignment="Center"
                                          Click="ChkUnifiedContent_Click"
                                          IsChecked="{Binding UnifiedContentFolder, Mode=TwoWay}" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ui:Card>

            <!--  Tools & Settings Card  -->
            <ui:Card MaxWidth="820" Padding="24">
                <StackPanel>
                    <!--  Tools Section  -->
                    <Grid Margin="0,-5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       Symbol="Wrench24" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="18"
                                       FontWeight="SemiBold"
                                       Text="Tools and Utilities" />
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="Additional tools and maintenance options" />
                        </StackPanel>
                    </Grid>

                    <!--  Tool Buttons  -->
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <ui:Button x:Name="BtnExportLogsCanary"
                                   Appearance="Secondary"
                                   Click="BtnExportLogs_Click"
                                   Content="{DynamicResource ManagePage_ExportLogFile}"
                                   IsEnabled="{Binding CanaryInstalled}"
                                   Style="{DynamicResource ManageXeniaButton}">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="DocumentArrowUp20" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button x:Name="BtnRedownload"
                                   Appearance="Secondary"
                                   Click="BtnRedownloadXenia_Click"
                                   Content="{DynamicResource ManagePage_Redownload}"
                                   Style="{DynamicResource ManageXeniaButton}"
                                   ToolTip="{DynamicResource ManagePage_RedownloadCanaryTooltip}">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="DrawerArrowDownload24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button x:Name="BtnUpdateSDLGameControllerDB"
                                   Appearance="Secondary"
                                   Click="BtnUpdateSDLGameControllerDB_Click"
                                   Content="{DynamicResource ManagePage_UpdateGameControllerDatabase}"
                                   Style="{DynamicResource ManageXeniaButton}">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="DocumentArrowUp20" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!--  Future Features Card  -->
            <ui:Card MaxWidth="820"
                     Padding="24"
                     Opacity="0.7">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:SymbolIcon Grid.Column="0"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"
                                       FontSize="24"
                                       Symbol="XboxController24" />
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock FontSize="18"
                                       FontWeight="SemiBold"
                                       Text="Netplay and Additional Features" />
                            <TextBlock FontSize="12"
                                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                       Text="Coming Soon" />
                        </StackPanel>
                    </Grid>
                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                               Text="Additional emulator versions and networking features will be available here."
                               TextWrapping="Wrap" />
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </ui:DynamicScrollViewer>
</Page>