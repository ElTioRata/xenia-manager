<UserControl x:Class="XeniaManager.Desktop.Controls.Settings.ComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XeniaManager.Desktop.Controls.Settings"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="810"
             x:Name="root">
    <Border BorderBrush="{DynamicResource TextFillColorPrimaryBrush}"
            BorderThickness="2"
            CornerRadius="10"
            Margin="2"
            Height="60"
            MaxWidth="810">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"
                       FontSize="24"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Text="{Binding Label, ElementName=root}"
                       ToolTip="{Binding ToolTipText, ElementName=root}">
            </TextBlock>
            
            <ComboBox Grid.Column="1"
                      x:Name="PART_Combo"
                      Cursor="Hand"
                      FontSize="18"
                      Margin="0,10"
                      HorizontalAlignment="Center"
                      MinWidth="150"
                      ItemsSource="{Binding ItemsSource, ElementName=root}"
                      SelectedItem="{Binding SelectedItem, ElementName=root, Mode=TwoWay}">
            </ComboBox>
        </Grid>
    </Border>
</UserControl>
